@Library('my-jgl') _

pipeline {
  // agent must be declared right after pipeline so it doesnt throw an error
  // agent none
  agent {
    kubernetes {
      containerTemplate {
        image 'alpine:latest'
        name 'my-alpine-container'
        ttyEnabled true
        command 'cat'
      }
    }
  }
  stages {
    stage("First Test") {
      steps {
        echo "### FIRST ###"
        sh "cat /etc/*-release"
      }
    }
    stage("Ubuntu Test") {
      agent {
        kubernetes {
          containerTemplate {
            image 'ubuntu'
            name 'my-ubuntu-container'
            ttyEnabled true
            command 'cat'
          }
        }
      }
      steps {
        container('my-ubuntu-container') {
          echo "### Ubuntu ###"
          sh "cat /etc/*-release"
        }
      }
    }
    stage("Second Test") {
      steps {
        echo "### SECOND ###"  
        sh "cat /etc/*-release"
      }
    }
  }
}

