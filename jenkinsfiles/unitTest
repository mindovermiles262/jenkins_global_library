@Library('my-jgl') _

pipeline {
  // agent must be declared right after pipeline so it doesnt throw an error
  // agent none
  agent {
    kubernetes {
      containerTemplate {
        image 'alpine:latest'
        name 'my-alpine-container'
        ttyEnabled true
        command 'cat'
      }
      containerTemplate {
        image 'mindovermiles262/pytest:0.1.1'
        name 'unit-testing-python'
        ttyEnabled true
        command 'cat'
      }
    }
  }
  stages {
    stage("Container in JGL") {
      steps {
        script {
          withEnv([
          'UNITTESTING_GIT_URL=https://github.com/mindovermiles262/linuxacademy-ng']) {
            dataeng.unitTest()
          }
        }
      }
    }
  }
}

