@Library('my-jgl') _

pipeline {
  agent {
    kubernetes {
      containerTemplate {
        image 'alpine:latest'
        name 'my-alpine-container'
        ttyEnabled true
        command 'cat'
      }
    }
  }
  stages {
    stage("Unit Testing on external repository") {
      agent {
        kubernetes {
          containerTemplate {
            image 'mindovermiles262/pytest:0.1.2'
            name 'unit-testing-python'
            ttyEnabled true
            command 'cat'
          }
        }
      }
      steps {
        script {
          withEnv([
            'UNITTEST_GIT_URL=https://github.com/mindovermiles262/linuxacademy-ng'
          ]) {
            dataeng.unitTest()
          }
        }
      }
    }
  }
}

