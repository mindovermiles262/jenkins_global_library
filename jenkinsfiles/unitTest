@Library('my-jgl') _

pipeline {
  agent {
    kubernetes {
      containerTemplate {
        image 'alpine:latest'
        name 'my-alpine-container'
        ttyEnabled true
        command 'cat'
      }
    }
  }
  stages {
    stage("First Stage") {
      steps {
        sh "cat /etc/*-release"
      }
    }
    stage("Unit Testing on external repository") {
      agent {
        kubernetes {
          containerTemplate {
            image 'mindovermiles262/pytest:0.1.2'
            name 'unit-test-python'
            ttyEnabled true
            command 'cat'
          }
        }
      }
      steps {
        script {
          dataeng.unitTest(
            "http://github.com/mindovermiles262/linuxacademy-ng",
            unitTestGitBranch="*/fail"
          )
        }
      }
    }
  }
}

