@Library('my-jgl') _

pipeline {
  // agent must be declared right after pipeline so it doesnt throw an error
  // agent none
  agent {
    kubernetes {
      containerTemplate {
        image 'alpine:latest'
        name 'my-alpine-container'
        ttyEnabled true
        command 'cat'
      }
      containerTemplate {
        image 'mindovermiles262/pytest'
        name 'unitTestingPython'
        ttyEnabled true
        command 'cat'
      }
    }
  }
  stages {
    stage("Container in JGL") {
      steps {
        script {
          dataeng.unitTest()
        }
      }
    }
  }
}

