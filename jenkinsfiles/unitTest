@Library('my-jgl') _

pipeline {
  // agent must be declared right after pipeline so it doesnt throw an error
  agent none
  stages {
    stage("Alpine Test") {
      agent {
        kubernetes {
          containerTemplate {
            image 'alpine:latest'
            name 'my-alpine-container'
            ttyEnabled true
            command 'cat'
          }
        }
      }
      steps {
        container('my-alpine-container') {
          sh "cat /etc/*-release"
        }
      }
    }
    stage("Ubuntu Test") {
      agent {
        kubernetes {
          containerTemplate {
            image 'ubuntu'
            name 'my-ubuntu-container'
            ttyEnabled true
            command 'cat'
          }
        }
      }
      steps {
        container('my-ubuntu-container') {
          sh "cat /etc/*-release"
        }
      }
    }
  }
}

