@Library('my-jgl') _

pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    project: jenkins-global-lib
spec:
  containers:
  - name: my-alpine-container
    image: alpine
    command:
    - cat
    tty: true
"""
    }
  }
  stages {
    stage("Alpine Test") {
      steps {
        container('my-alpine-container') {
          sh "cat /etc/*-release"
        }
      }
    }
  }
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    project: jenkins-global-lib
spec:
  containers:
  - name: my-ubuntu-container
    image: ubuntu
    command:
    - cat
    tty: true
"""
    }
  }
  stages {
    stage("Ubuntu Test") {
      steps {
        container('my-ubuntu-container') {
          sh "cat /etc/*-release"
        }
      }
    }
  }
}

