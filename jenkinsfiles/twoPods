@Library('my-jgl') _

pipeline {
  stages {
    stage("Alpine Test") {
      agent {
        kubernetes {
          yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    project: jenkins-global-lib
spec:
  containers:
  - name: my-alpine-container
    image: alpine
    command:
    - cat
    tty: true
"""
        }
      }
      steps {
        container('my-alpine-container') {
          sh "cat /etc/*-release"
        }
      }
    }
  }
}

