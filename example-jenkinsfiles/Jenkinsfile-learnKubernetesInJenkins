@Library('my-jgl') _

pipeline {
  agent {
    kubernetes {
    /*
    It is necessary to use YAML here. containerTemplates do not work
    as they override themselves.

      containerTemplate {
        name 'my-container'
        image 'alpine:latest'
        command 'cat'
        ttyEnabled true
      }
      containerTemplate {
        name 'my-other-container'
        image 'busybox:latest'
        command 'cat'
        ttyEnabled true
      }
    */
    yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    project: jenkins-global-lib
spec:
  containers:
  - name: my-alpine-container
    image: alpine
    command:
    - cat
    tty: true
  - name: my-busybox-container
    image: busybox
    command:
    - cat
    tty: true
"""
    }
  }
  stages {
    stage("Alpine Test") {
      steps {
        container('my-alpine-container') {
          sh "printenv"
          sh "cat /etc/*-release"
        }
        container('my-busybox-container') {
          sh "cat /etc/*-release"
        }
      }
    }
  }
}

