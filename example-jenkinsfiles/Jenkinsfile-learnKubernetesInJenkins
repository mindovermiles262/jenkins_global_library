@Library('my-jgl') _

pipeline {
  agent {
    kubernetes {
      containerTemplate {
        name 'my-container'
        image 'alpine:latest'
        command 'cat'
        ttyEnabled true
      }
      containerTemplate {
        name 'my-other-container'
        image 'busybox:latest'
        command 'cat'
        ttyEnabled true
      }
    }
  }
  stages {
    stage("Alpine Test") {
      steps {
        container('my-container') {
          sh "printenv"
          sh "cat /etc/*-release"
        }
        container('my-other-container') {
          sh "cat /etc/*-release"
        }
      }
    }
  }
}

