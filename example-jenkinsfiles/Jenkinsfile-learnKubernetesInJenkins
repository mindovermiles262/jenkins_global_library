@Library('my-jgl') _

pipeline {
  agent {
    kubernetes {
      containerTemplate {
        name 'my-container'
        image 'alpine:latest'
        label 'alpine-container'
        command 'cat'
        ttyEnabled true
      }
    }
  }
  stages {
    container('alpine-container') {
      stage("Smoke Test") {
        steps {
          sh "printenv"
          sh "cat /etc/*-release"
        }
      }
    }
  }
}

